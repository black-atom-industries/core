{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "version": "1.0.0",
  "tasks": {
    "install": "deno install --global --allow-read --import-map=import_map.json -f -n black-atom-core src/cli.ts"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "importMap": "./import_map.json"
}
